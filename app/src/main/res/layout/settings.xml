<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:mainActivity=".client.MainActivity"
        android:orientation="vertical"
        android:layout_margin="0dp" android:id="@+id/rootSettings" android:background="?android:attr/colorBackground">

    <TextView
            android:text="Settings"
            android:layout_width="match_parent"
            android:layout_height="30dp" android:id="@+id/textView2"
            android:gravity="center_vertical|center_horizontal" android:fontFamily="sans-serif"
            android:textSize="24sp" android:layout_margin="20dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey" android:id="@+id/view18"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:text="Moodle SessionID"
                android:layout_width="200dp"
                android:layout_height="40dp" android:layout_weight="1"
                android:paddingLeft="20dp" android:layout_marginBottom="5dp" android:gravity="center_vertical"
                android:layout_marginTop="5dp"/>
        <Button
                android:text=" get ID"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/getID" android:layout_weight="1"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey"/>
    <TextView
            android:text="Open Source Licences"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:id="@+id/licences" android:layout_marginBottom="5dp"
            android:paddingLeft="20dp" android:gravity="center_vertical" android:layout_marginTop="5dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey" android:id="@+id/view"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>