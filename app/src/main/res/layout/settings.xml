<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:mainActivity=".client.MainActivity"
        android:orientation="vertical"
        android:layout_margin="0dp" android:id="@+id/rootSettings" android:background="?android:attr/colorBackground">

    <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="10dp">
        <ImageView
                android:layout_height="50dp" app:srcCompat="?attr/actionModeCloseDrawable"
                android:id="@+id/back" android:layout_weight="0" android:backgroundTint="@color/darkGrey"
                android:padding="10dp" android:layout_width="50dp" android:layout_gravity="center_vertical"/>
        <TextView
                android:id="@+id/topic"
                android:text="Einstellungen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:paddingLeft="20dp"
                android:textColor="@color/darkGrey"
                android:textStyle="bold"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey" android:id="@+id/view18"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" android:paddingLeft="20dp">
        <TextView
                android:text="Moodle Username:"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/username"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" android:paddingLeft="20dp">
        <TextView
                android:text="Moodle Passwort:"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" android:paddingLeft="20dp">
        <TextView
                android:text="Klasse:"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/klasse"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey" android:id="@+id/view2"/>
    <TextView
            android:text="Ãœber"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:id="@+id/about" android:layout_marginBottom="5dp"
            android:paddingLeft="20dp" android:gravity="center_vertical" android:layout_marginTop="5dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey" android:id="@+id/view"/>
    <TextView
            android:text="Open Source Licences"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:id="@+id/licences" android:layout_marginBottom="5dp"
            android:paddingLeft="20dp" android:gravity="center_vertical" android:layout_marginTop="5dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/darkGrey" android:id="@+id/view3"/>
</LinearLayout>